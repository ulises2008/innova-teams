---
import { Button, FormInput, FormTextarea } from '@littlesticks/odyssey-theme-components';
---

<form name="Contact Form" method="POST" action="/contact-thank-you">
  <FormInput type="text" label="Nombre" name="Name" placeholder="John Doe" />
  <FormInput type="email" label="Email" name="Email" placeholder="hello@example.com" />
  <FormTextarea label="Message" name="Mensaje" placeholder="Your message here..." />
  <Button>Enviar</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>